<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="attachment_copy_form" model="ir.ui.view">
        <field name="name">attachment_copy_form</field>
        <field name="model">ir.attachment.create_templ</field>
        <field name="arch" type="xml">
            <form string="Create from template">
                <group>
                    <group>
                        <field name="res_model" readonly="1"/>
                    </group>
                    <group>
                        <field name="res_id" readonly="1"/>
                    </group>
                </group>
                <group string="Choose template">
                    <group>
                        <field
                            name="template_id"
                            domain="[('is_template','=', True),'|',('template_model','=',res_model),('template_model_id','=',False)]"
                            widget="radio"
                        />
                    </group>
                    <group>
                        <field name="icon_image" widget="image" class="oe_avatar" nolabel="1" invisible="not template_id"/>
                    </group>
                </group>
                <footer>
                    <button name="create_from_template" type="object" id="create_from_template_new" string="Create"
                            class="btn-primary" data-hotkey="q" invisible="template_id == False"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
